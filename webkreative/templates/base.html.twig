<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}WebKreative Welcome{% endblock %}</title>
        
        {# Font Awesome #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <script src="https://kit.fontawesome.com/b5986ce268.js" crossorigin="anonymous"></script>

        {# UIcons #}
        <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css'>
        
        {# Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=BioRhyme:wght@300;400;700;800&display=swap" rel="stylesheet">

        
        
        {# Venta.js #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('JS/app.js') }}"></script>
            <script>
            window.addEventListener('load', function () {
                VANTA.NET({
                    el: "#ventajs-background",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 200.00,
                    minWidth: 200.00,
                    scale: 1.00,
                    scaleMobile: 3.00,
                    color: 0x3fffdd,
                    backgroundColor: 0x0,
                    points: 10.00,
                    maxDistance: 45.00,
                    spacing: 32.00,
                    showDots: false
                })
            })
            </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="ventajs-background">
    {% dump(app.request.attributes.get('_route')) %}
        <div id="page">
            {% if app.request.attributes.get('_route') != 'landing_page' %}
            <header>
                <nav class="navbar">
                    <a class="nav-logo" href="{{ path('homepage') }}">
                        <img src="{{ asset('assets/img/logo-webkreative-backgroundblack.png') }}" alt="Logo Webkreative" class="header-logo">
                    </a> 
                    <ul class="nav-list" id="nav_list">
                        <li class="nav-list-border">
                            <a class="nav-link" href="{{ path('homepage') }}#about">About</a>
                        </li>
                        <li class="nav-list-border">
                            <a class="nav-link {{ (app.request.attributes.get('_route') == 'service') ? 'current-link' : '' }}" href="{{ path('service') }}">Mes Services</a>
                        </li>
                        <li class="nav-list-border">
                            <a class="nav-link" href="#">Portofolio</a>
                        </li>
                        <li class="nav-list-border">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                    </ul>

                    <div class="hamburger" data-controller="hamburger" data-action="click->hamburger#click">
                        <div class="bar1"></div>
                        <div class="bar2"></div>
                        <div class="bar3"></div>
                    </div>
                </nav>
            </header>
            {% endif %}

            <main>
                {% block body %}{% endblock %}
            </main>

            {% if app.request.attributes.get('_route') != 'landing_page' %}
            <footer>
                <p>&copy;weBKReative</p>
            </footer>
            {% endif %}
        </div>
    </body>
</html>
