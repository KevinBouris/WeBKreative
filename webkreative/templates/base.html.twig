<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}WebKreative Welcome{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {# Font Awesome #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
        {# Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=BioRhyme:wght@300;400;700;800&display=swap" rel="stylesheet">
        
        {# Venta.js #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('JS/app.js') }}"></script>
            <script>
            window.addEventListener('load', function () {
                VANTA.NET({
                    el: "#ventajs-background",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 200.00,
                    minWidth: 200.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x3fffdd,
                    backgroundColor: 0x0,
                    points: 10.00,
                    maxDistance: 45.00,
                    spacing: 32.00,
                    showDots: false
                })
            })
            </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="ventajs-background">
        {% if app.request.attributes.get('_route') != 'landing_page' %}
        <header>
            <nav class="navigation">
                <div class="nav-container">
                    <a class="nav-logo ml-4" href="#">
                        <img src="{{ asset('assets/img/logo-webkreative-backgroundblack.png') }}" alt="Logo Webkreative" class="header-logo">
                    </a>
                    <div class="nav-list">
                        <ul>
                            <li>
                                <a class="" aria-current="page" href="#">About</a>
                            </li>
                            <li class="">
                                <a class="" href="#">Services</a>
                            </li>
                            <li class="">
                                <a class="" href="#">Portofolio</a>
                            </li>
                            <li class="">
                                <a class="" href="#">Blog</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% endif %}
        {% block body %}
        {% endblock %}
    </body>
</html>
